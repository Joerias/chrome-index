* {
    margin: 0;
    padding: 0;
    font-family: Microsoft Yahei;
    font-size: 16px;
    // background: #000;
}

.clearfix:after {
    visibility: hidden;
    display: block;
    font-size: 0;
    content: " ";
    clear: both;
    height: 0;
}

ul {
    list-style: none;
}

a {
    text-decoration: none;
}

body {
    position: relative;
}

.wrap {
    width: 100%;
}

